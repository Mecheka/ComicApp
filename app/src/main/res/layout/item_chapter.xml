<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="com.traning.suriya.comicapp.model.chapter.Chapter"/>
        <variable name="adapter" type="com.traning.suriya.comicapp.scene.chapter.ChapterAdapter"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/columnColor"
            tools:ignore="RtlSymmetry"
            android:onClick="@{()->adapter.onItemClick(model)}">

        <TextView
                android:id="@+id/txt_chapter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{model.name}"
                android:textAlignment="textStart"
                android:textColor="@color/colorOrange"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Chapter 1"/>

    </android.support.constraint.ConstraintLayout>
</layout>